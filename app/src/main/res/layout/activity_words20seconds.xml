<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".words20seconds">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:navigationBarColor="@android:color/white"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="118dp">


        <TextView
            android:id="@+id/title1_text_view"
            style="@style/textSredniyZagolovok"
            android:text="Скилл скорость"/>

        <TextView
            android:id="@+id/letter_text_view"
            style="@style/textMiniZagolovok"
            android:layout_width="239dp"
            android:text="Случайная буква" />

        <Button
            android:id="@+id/button1"
            style="@style/simpleButton"
            android:onClick="submitOrder"
            android:text="Сменить букву"/>


        <TextView
            android:id="@+id/type1_text_view"
            style="@style/textMiniZagolovok"
            android:layout_width="205dp"
            android:text="Случайный тип" />

        <Button
            android:id="@+id/button2"
            style="@style/simpleButton"
            android:onClick="submitOrder2"
            android:text="Сменить тип"/>


        <Button
            android:id="@+id/buttonStart"
            style="@style/simpleButton"
            android:onClick="startToTimer"
            android:text="Start"
            tools:visibility="visible" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>