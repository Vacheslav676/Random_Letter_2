<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrainTrainMenu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            style="@style/textMiniZagolovok"
            android:text="@string/skill_speed" />

        <Button
            android:id="@+id/words_in_20_seconds_button"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginBottom="132dp"
            android:text="@string/words_in_20_seconds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView4"
            style="@style/textMiniZagolovok"
            android:text="@string/skill_of_fiction" />

        <Button
            android:id="@+id/category_2_letters_button"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginBottom="50dp"
            android:text="category and 2 letters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />




    </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>