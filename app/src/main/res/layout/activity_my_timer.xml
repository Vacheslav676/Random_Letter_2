<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyTimer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:navigationBarColor="@android:color/white"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="118dp">

        <ImageView
            android:id="@+id/my_timer_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:srcCompat="@drawable/circle_without_background"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="267dp" />

        <Button
            android:id="@+id/MyTimer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/my_timer_view"
            android:layout_alignBottom="@+id/my_timer_view"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="53dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="60"
            android:textSize="100dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>